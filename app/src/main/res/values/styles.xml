    <style name="myButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/drawer_toggle</item>
    </style>



    <!--set the ripple color-->
    <style name="RippleRed" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlHighlight">@color/ripple_red</item>
        <item name="colorControlHighlight">@color/ripple_red</item>
