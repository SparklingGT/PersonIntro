    <style name="PrefsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/prefsPrimary</item>
        <item name="colorPrimaryDark">@color/prefsPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/myButtonStyle</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>

        <item name="android:colorControlHighlight">@color/ripple_purple</item>
        <!--this somehow fix the prefs ripple issue.... why? -->
        <!-- TODO : Ripple color in toolbar drop down menu  -->
    </style>

    <style name="LicenseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/licensePrimary</item>
        <item name="colorPrimaryDark">@color/licensePrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/myButtonStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/md_blue_700</item>
